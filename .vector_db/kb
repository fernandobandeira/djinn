#!/bin/bash
# Qdrant Knowledge Base - Fast vector search optimized for LLMs
# Works from any directory

# Get the absolute path to the .vector_db directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Use Qdrant KB - the only KB implementation
cd "$SCRIPT_DIR" && exec uv run python kb_qdrant.py "$@"