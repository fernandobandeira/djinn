#!/bin/bash
# Qdrant Knowledge Base - Fast vector search optimized for LLMs
# Works from any directory

# Get the absolute path to the .vector_db directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Use the virtual environment's Python directly to avoid dependency re-checks
cd "$SCRIPT_DIR" && exec .venv/bin/python kb_qdrant.py "$@"