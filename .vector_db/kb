#!/bin/bash
# KB wrapper that ensures we use the correct Python environment
# Works from any directory

# Get the absolute path to the .vector_db directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Change to .vector_db directory and run kb_main.py with uv
cd "$SCRIPT_DIR" && exec uv run python kb_main.py "$@"